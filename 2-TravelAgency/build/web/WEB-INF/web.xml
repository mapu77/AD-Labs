<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <location>/error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionVuelosServlet</servlet-name>
        <servlet-class>servlets.GestionVuelosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestionHotelesServlet</servlet-name>
        <servlet-class>servlets.GestionHotelesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightManagementServlet</servlet-name>
        <servlet-class>servlets.FlightManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HotelManagementServlet</servlet-name>
        <servlet-class>servlets.HotelManagementServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightManagementServletRest</servlet-name>
        <servlet-class>servlets.FlightManagementServletRest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HotelManagementServletRest</servlet-name>
        <servlet-class>servlets.HotelManagementServletRest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionVuelosServlet</servlet-name>
        <url-pattern>/GestionVuelosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestionHotelesServlet</servlet-name>
        <url-pattern>/GestionHotelesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightManagementServlet</servlet-name>
        <url-pattern>/flightManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelManagementServlet</servlet-name>
        <url-pattern>/hotelManagementServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightManagementServletRest</servlet-name>
        <url-pattern>/flightManagementServletRest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HotelManagementServletRest</servlet-name>
        <url-pattern>/hotelManagementServletRest</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
